<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/app/index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CookieFilter</filter-name>
        <filter-class>filter.CookieFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PermissionFilter</filter-name>
        <filter-class>filter.PermissionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionFilter</filter-name>
        <url-pattern>/Dashboard</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <jsp-file>/admin/Dashboard.jsp</jsp-file>
        <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <jsp-file>/app/index.jsp</jsp-file>
        <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet>
        <servlet-name>Store</servlet-name>
        <jsp-file>/app/Store.jsp</jsp-file>
        <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet>
        <servlet-name>CartDisplay</servlet-name>
        <jsp-file>/app/CartDisplay.jsp</jsp-file>
        <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet>
        <servlet-name>HistoryDisplay</servlet-name>
        <jsp-file>/app/HistoryBuy.jsp</jsp-file>
        <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet>
        <servlet-name>Product</servlet-name>
        <jsp-file>/app/Product.jsp</jsp-file>
        <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet>
        <servlet-name>FilterCategory</servlet-name>
        <servlet-class>controller.FilterCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyController</servlet-name>
        <servlet-class>controller.BuyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>controller.DashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadDataController</servlet-name>
        <servlet-class>controller.LoadDataController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fileServlet</servlet-name>
        <servlet-class>controller.FileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileServlet</servlet-name>
        <url-pattern>/file/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/Dashboard</url-pattern>
        <!-- Any URL you want here -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/HomePage</url-pattern>
        <!-- Any URL you want here -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartDisplay</servlet-name>
        <url-pattern>/CartDisplay</url-pattern>
        <!-- Any URL you want here -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Store</servlet-name>
        <url-pattern>/Store</url-pattern>
        <!-- Any URL you want here -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/Product</url-pattern>
        <!-- Any URL you want here -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryDisplay</servlet-name>
        <url-pattern>/History</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterCategory</servlet-name>
        <url-pattern>/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyController</servlet-name>
        <url-pattern>/BuyProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/DashboardController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadDataController</servlet-name>
        <url-pattern>/LoadData</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
